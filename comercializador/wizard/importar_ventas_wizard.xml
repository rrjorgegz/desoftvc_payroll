<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_sales_import_wiz_form" model="ir.ui.view">
            <field name="name">comercializador.importar.ventas.wiz.form</field>
            <field name="model">comercializador.importar.ventas.wiz</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="filename" invisible="1" />
                                <field name="import_file" widget="binary"
                                    options="{'accepted_file_extensions': '.xls,.xlsx,.csv'}"
                                    filename="filename" string="Importar Archivo" />
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="producto_id"/>
                            </group>
                            <group>
                                <field name="division_id" />
                            </group>
                        </group>
                        <!-- <field name="otras_ventas" /> -->
                    </sheet>
                    <footer>
                        <button name="button_import_xlsx_sales" string="Importar" type="object"
                            class="btn-primary" />
                        <button string="Cancelar" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>