<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <!-- FORM VIEW -->
    <record id="hr_category_form_view" model="ir.ui.view">
        <field name="model">hr.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="order"/>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- TREE VIEW -->
    <record id="hr_category_tree_view" model="ir.ui.view">
        <field name="model">hr.category</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="order"/>
                <field name="code"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- ACTION -->
    <record id="hr_category_action" model="ir.actions.act_window">
        <field name="name">Categorías ocupacionales</field>
        <field name="res_model">hr.category</field>
        <field name="view_mode">tree</field>
    </record>

    <!-- MENU ITEM -->
    <menuitem name="Categorías ocupacionales" id="hr_category_menu_item" action="hr_category_action" parent="l10n_cu_hr_nomenclator.position_work_menu" />

</odoo>
