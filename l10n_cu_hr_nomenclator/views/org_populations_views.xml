<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- FORM VIEW -->
    <record id="org_populations_form_view" model="ir.ui.view">
        <field name="model">org.populations</field>
        <field name="arch" type="xml">
            <form string="Organizaciones Militares">
                <group>
                    <group>
                        <field name="name"/>
                    </group>
                    <group/>
                </group>
            </form>
        </field>
    </record>


    <!-- TREE VIEW -->
    <record id="org_populations_tree_view" model="ir.ui.view">
        <field name="model">org.populations</field>
        <field name="arch" type="xml">
            <tree string="Organizaciones Militares">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- ACTION -->
    <record id="org_populations_action" model="ir.actions.act_window">
        <field name="name">Organizaciones Militares</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">org.populations</field>
    </record>

    <!-- MENU ITEM -->
    <menuitem name="Masas" id="org_populations_menu_item" action="org_populations_action" parent="l10n_cu_hr_nomenclator.organizations_menu" sequence="50"/>

</odoo>
