<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- TREE VIEW -->
    <record id="disciplinary_measures_tree_view" model="ir.ui.view">
        <field name="name">Medidas disciplinarias</field>
        <field name="model">disciplinary.measures</field>
        <field name="arch" type="xml">
            <tree string="Medidas disciplinarias">
                <field name="name"/>
                <field name="code"/>
                <field name="impuesto"/>
                <field name="tipo_medida"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="disciplinary_measures_form_view" model="ir.ui.view">
        <field name="name">Medidas disciplinarias</field>
        <field name="model">disciplinary.measures</field>
        <field name="arch" type="xml">
            <form string="Medidas disciplinarias">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="impuesto"/>
                            <field name="tipo_medida"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="disciplinary_measures_action" model="ir.actions.act_window">
        <field name="name">Medidas disciplinarias</field>
        <field name="res_model">disciplinary.measures</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- MENU ITEM -->
    <menuitem id="menu_disciplinary_measures" parent="l10n_cu_hr_nomenclator.sanction_menu" name="Medidas disciplinarias" sequence="10" action="disciplinary_measures_action"/>

</odoo>
